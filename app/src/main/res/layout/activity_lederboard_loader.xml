            android:textColor="#BEC0DD"
            android:textSize="20sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/lead3"
        android:layout_width="180dp"
        android:layout_height="163dp"
        android:layout_marginStart="8dp"
